extend layout.pug

block content
    if errors
        div
        ul
          p The following errors were found:
          each error in errors
            li #{error}
    form.pure-form(action= "/create", method= "post")
        fieldset
            legend Create User
            input(type= "hidden", name= "_csrf", value= csrfToken)
            input(type= "text", name= "firstName", value= firstName, placeholder= "First Name", required)
            input(type= "text", name= "lastName", value= lastName, placeholder= "Last Name", required)
            input(type= "email", name= "email", value= email, placeholder= "Email", required)
            input(type= "password", name= "password", placeholder= "Password", required)
            input(type= "password", name= "confirmedPassword", placeholder= "Confirm Password", required)
            input(type= "submit", value= "Create User")
